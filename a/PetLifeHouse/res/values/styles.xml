<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="ticket_title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ticket_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="user_text">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="user_title">
        <item name="android:textColor">#717171</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ticket_desc">
        <item name="android:textColor">#b3b3b3</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ticket_buyed">
        <item name="android:textColor">#fc4a00</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="call_phone">
        <item name="android:textColor">#07a0e8</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ticket_price">
        <item name="android:textColor">#fc4a00</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popupwindow_in</item>
    </style>
    
</resources>