<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/layout_padding" >

        <com.boqii.petlifehouse.widgets.NetImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="72dp" />

        <TextView
            android:id="@+id/title"
            style="@style/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/image"
            android:maxLines="2"
            android:text="超级宝贝站外推广优惠券超级宝贝站外推广优惠券超级宝贝站外推广优惠券" />

        <TextView
            android:id="@+id/mianzhi"
            style="@style/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/image"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/mianzhi"
            android:singleLine="true"
            android:text="￥40.60"
            android:textColor="#fc4a00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/status"
            style="@style/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/price"
            android:singleLine="true"
            android:text="待付款" />

        <TextView
            android:id="@+id/look"
            style="@style/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="查看凭证"
            android:textColor="#6cc6f1"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent" />

</LinearLayout>