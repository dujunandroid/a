<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white8f"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="12dp" >

    <TextView
        android:id="@+id/map_store_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/store_titel"
        android:textColor="@color/text_gray"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/map_store_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:text="@string/store_content"
        android:textColor="@color/grey71s"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/goBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/map_go"
            android:onClick="onAction" />

        <ImageView
            android:id="@+id/callBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/map_call"
            android:onClick="onAction" />

        <ImageView
            android:id="@+id/detailsBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/map_merchant"
            android:onClick="onAction" />
    </LinearLayout>

</LinearLayout>